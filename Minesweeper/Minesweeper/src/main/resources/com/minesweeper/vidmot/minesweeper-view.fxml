<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="35.0" prefWidth="486.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.minesweeper.vidmot.MinesweeperController">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="9.0" prefWidth="200.0" spacing="50.0">
         <children>
            <Button fx:id="fxBackToMenu" alignment="CENTER" mnemonicParsing="false" onAction="#backToMenu" text="Menu" />
            <Button fx:id="fxRestart" mnemonicParsing="false" onAction="#restart" text="Restart" />
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Mines left" />
                  <Label fx:id="fxNumFlags" text="0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Timer" />
                  <Label fx:id="fxTimer" text="0" />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding></HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label fx:id="fxDead" />
         </children>
      </HBox>
      <GridPane fx:id="fxMineField" alignment="BOTTOM_CENTER" hgap="0" vgap="0" VBox.vgrow="NEVER">
      </GridPane>
   </children>
</VBox>
